@model ContosoUniversity.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StudentID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

    </dl>
</div>


<div>
    <h2>Student Links</h2>
    <p>
        @Html.ActionLink("Create New", "Create", "StudentWorks")
    </p>

    <d1>
        <table class="table">
            <tr>
                <th>

                </th>

            </tr>

            @foreach (var item in Model.StudentWorks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LinkName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        </table>
    </d1>
</div>

